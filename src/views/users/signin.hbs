<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h1>Account Login</h1>
            </div>
            <img src="/img/notes.png" alt="notes image" class="rounded-circle mx-auto d-block m-4 logo">
            <div class="card-body">
                <form action="/users/signin" method="post">
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Email" autofocus></input>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" id="" class="form-control" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">SignIn</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>